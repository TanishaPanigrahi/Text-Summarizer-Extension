
{
    "manifest_version": 2,
    "name": "Text Summarizer Extension",
    "version": "1.0",
    "description": "Summarize text with NLP",
    "icons": {
        "48": "icon.png"
    },
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click to Summarize Text"
    },
    "commands": {
        "summarize-text": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            },
            "description": "Summarize selected text"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}  
